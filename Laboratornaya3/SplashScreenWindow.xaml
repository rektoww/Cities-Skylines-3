<Window x:Class="Laboratornaya3.Views.SplashScreenWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SplashScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Width="600"
        Height="400"
        WindowStartupLocation="CenterScreen">

    <Border Background="#2C3E50"
            CornerRadius="20"
            BorderBrush="#34495E"
            BorderThickness="2">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- Анимация и логотип -->
            <StackPanel Grid.Row="0"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center">
                <TextBlock Text="🏙️"
                           FontSize="80"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20" />
                <TextBlock Text="Cities: Skylines 3"
                           FontSize="28"
                           Foreground="White"
                           FontWeight="Bold"
                           HorizontalAlignment="Center" />
                <TextBlock Text="Симулятор города"
                           FontSize="16"
                           Foreground="#BDC3C7"
                           HorizontalAlignment="Center"
                           Margin="0,10,0,0" />
            </StackPanel>

            <!-- Прогресс-бар -->
            <ProgressBar Grid.Row="1"
                         Height="10"
                         Margin="40,0,40,20"
                         Foreground="#3498DB"
                         IsIndeterminate="True" />

            <!-- Версия -->
            <TextBlock Grid.Row="2"
                       Text="v1.0.0"
                       Foreground="#7F8C8D"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"
                       FontSize="12" />
        </Grid>
    </Border>
</Window>