<UserControl x:Class="Laboratornaya3.Views.Components.Map"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Laboratornaya3.Views.Components"
             xmlns:map="clr-namespace:Core.Models.Map;assembly=Core"
             xmlns:vm="clr-namespace:Laboratornaya3.ViewModels"
             xmlns:converters="clr-namespace:Laboratornaya3.Converters"
             xmlns:enums="clr-namespace:Core.Enums;assembly=Core"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
        <converters:NullToCollapsedVisibilityConverter x:Key="NullToCollapsedVisibilityConverter"/>
    </UserControl.Resources>
    
    <ScrollViewer Grid.Row="1"
      x:Name="MapScrollViewer"
      HorizontalScrollBarVisibility="Disabled"
      VerticalScrollBarVisibility="Hidden"
      PreviewMouseWheel="MapScrollViewer_PreviewMouseWheel"
      MouseDown="MapScrollViewer_MouseDown"
      MouseMove="MapScrollViewer_MouseMove"
      MouseUp="MapScrollViewer_MouseUp"
      Background="#ADD8E6">

        <ContentControl x:Name="MapContainer">
            <Grid x:Name="MapGrid"
      RenderTransformOrigin="0,0"
      VerticalAlignment="Center"
      HorizontalAlignment="Center">
                <Grid.RenderTransform>
                    <TransformGroup>
                        <TranslateTransform x:Name="TranslateTransform" />
                        <ScaleTransform x:Name="ScaleTransform" />
                    </TransformGroup>
                </Grid.RenderTransform>

                <!-- список тайлов -->
                <ItemsControl x:Name="TilesItemsControl"
                  ItemsSource="{Binding TilesObservable}"
                  BorderThickness="0"
                  Background="Transparent" Margin="-371,401,371,-401">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Columns="{Binding CurrentMap.Width}"
                             Rows="{Binding CurrentMap.Height}" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate DataType="{x:Type map:Tile}">
                            <Border Width="50"
                        Height="50"
                        BorderBrush="#333"
                        BorderThickness="1"
                        MouseLeftButtonDown="Tile_LeftClick"
                        MouseRightButtonDown="Tile_RightClick">

                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Setter Property="Background" Value="PaleGreen" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Terrain}" Value="Water">
                                                <Setter Property="Background" Value="LightBlue" />
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Terrain}" Value="Mountain">
                                                <Setter Property="Background" Value="Gray" />
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Terrain}" Value="Forest">
                                                <Setter Property="Background" Value="DarkGreen" />
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Terrain}" Value="Meadow">
                                                <Setter Property="Background" Value="LightGreen" />
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Terrain}" Value="Plain">
                                                <Setter Property="Background" Value="PaleGreen" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>

                                <Grid>
                                    <Rectangle Fill="Transparent" />

                                    <!-- Визуализация дороги -->
                                    <Rectangle Fill="DarkGray" Margin="15">
                                        <Rectangle.Style>
                                            <Style TargetType="Rectangle">
                                                <Setter Property="Visibility" Value="Collapsed" />
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding HasRoad}" Value="True">
                                                        <Setter Property="Visibility" Value="Visible" />
                                                    </DataTrigger>
                                                    <!-- Ширина дороги через отступы: меньше Margin => шире визуально -->
                                                    <DataTrigger Binding="{Binding RoadType}" Value="{x:Static enums:RoadType.Avenue}">
                                                        <Setter Property="Margin" Value="8" />
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding RoadType}" Value="{x:Static enums:RoadType.Highway}">
                                                        <Setter Property="Margin" Value="4" />
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding RoadType}" Value="{x:Static enums:RoadType.Dirt}">
                                                        <Setter Property="Margin" Value="18" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Rectangle.Style>
                                    </Rectangle>

                                    <!-- Транспорт (несколько иконок) -->
                                    <ItemsControl ItemsSource="{Binding VehicleIcons}"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <StackPanel Orientation="Horizontal" />
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding .}" FontSize="14" Margin="1,0" />
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                        <ItemsControl.Style>
                                            <Style TargetType="ItemsControl">
                                                <Setter Property="Visibility" Value="Collapsed" />
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding HasVehicle}" Value="True">
                                                        <Setter Property="Visibility" Value="Visible" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </ItemsControl.Style>
                                    </ItemsControl>

                                    <!-- Перекрёсток -->
                                    <TextBlock Text="🚦"
                                           FontSize="14"
                                           HorizontalAlignment="Right"
                                           VerticalAlignment="Top"
                                           Margin="2">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Visibility" Value="Collapsed" />
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding HasIntersection}" Value="True">
                                                        <Setter Property="Visibility" Value="Visible" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>

                                    <!-- Основное здание (красный блок) -->
                                    <Border Background="Red"
                                        Margin="2"
                                        CornerRadius="3"
                                        Visibility="{Binding Building, Converter={StaticResource NullToVisibilityConverter}}">
                                        <TextBlock Text="{Binding Building.Name}"
                                               FontSize="8"
                                               Foreground="White"
                                               FontWeight="Bold"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"
                                               TextWrapping="Wrap"
                                               TextAlignment="Center" />
                                    </Border>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Grid>
        </ContentControl>
    </ScrollViewer>
</UserControl>
