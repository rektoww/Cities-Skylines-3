<Window x:Class="Laboratornaya3.Views.BuyMaterialsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Покупка материалов" 
        Height="350" 
        Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" 
                   Text="Выберите материалы для покупки:" 
                   FontSize="16" 
                   FontWeight="Bold"
                   Margin="0,0,0,10"/>

        <TextBlock Grid.Row="1"
                   FontSize="12"
                   Foreground="Gray"
                   Margin="0,0,0,10">
            <Run Text="Доступный бюджет: "/>
            <Run Text="{Binding AvailableBudget, Mode=OneWay, StringFormat='{}{0:N0}$'}" FontWeight="Bold"/>
        </TextBlock>

        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" Margin="0,0,0,10">
            <ItemsControl x:Name="MaterialsItemsControl">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="LightGray" 
                                BorderThickness="1" 
                                CornerRadius="5" 
                                Padding="10" 
                                Margin="0,0,0,5"
                                Background="#F9F9F9">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="80"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0" 
                                           Text="{Binding MaterialName}" 
                                           FontWeight="Bold" 
                                           VerticalAlignment="Center"/>

                                <TextBlock Grid.Column="1" 
                                           VerticalAlignment="Center">
                                    <Run Text="Цена: "/>
                                    <Run Text="{Binding Price, StringFormat='{}{0:N0}$'}" FontWeight="Bold"/>
                                </TextBlock>

                                <TextBox Grid.Column="2" 
                                         x:Name="QuantityTextBox"
                                         Text="{Binding QuantityToBuy, UpdateSourceTrigger=PropertyChanged}"
                                         VerticalAlignment="Center"
                                         Padding="5"
                                         TextAlignment="Center"/>

                                <TextBlock Grid.Column="3" 
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Right"
                                           Margin="10,0,0,0">
                                    <Run Text="Итого: "/>
                                    <Run Text="{Binding TotalCost, Mode=OneWay, StringFormat='{}{0:N0}$'}" FontWeight="Bold" Foreground="Green"/>
                                </TextBlock>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <Border Grid.Row="3" 
                Background="#E8F5E9" 
                Padding="10" 
                CornerRadius="5"
                Margin="0,0,0,10">
            <TextBlock FontSize="14" FontWeight="Bold">
                <Run Text="Общая стоимость: "/>
                <Run x:Name="TotalRevenueText" Text="0$" Foreground="Green"/>
            </TextBlock>
        </Border>

        <StackPanel Grid.Row="4" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right">
            <Button Content="Купить" 
                    Width="100" 
                    Height="30" 
                    Click="BuyButton_Click"
                    Background="LightGreen"
                    Margin="0,0,10,0"/>
            <Button Content="Отмена" 
                    Width="100" 
                    Height="30" 
                    IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
