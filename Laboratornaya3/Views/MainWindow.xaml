<Window x:Class="Laboratornaya3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:components="clr-namespace:Laboratornaya3.Views.Components"
        xmlns:vm="clr-namespace:Laboratornaya3.ViewModels"
        Title="Cities: Skylines 3"
        Height="600"
        Width="1000"
        WindowState="Maximized"
        WindowStyle="SingleBorderWindow">

    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Верхняя панель -->
        <components:Header Grid.Row="0"/>

        <!-- Область карты -->
        <components:Map Grid.Row="1"/>

        <!-- Легенда -->
        <components:Legend Grid.Row="1"/>

        <!-- Нижняя панель -->
        <components:BuildingsPanel Grid.Row="2"/>
    </Grid>
</Window>