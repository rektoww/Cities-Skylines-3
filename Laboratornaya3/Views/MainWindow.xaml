<Window x:Class="Laboratornaya3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:map="clr-namespace:Core.Models.Map;assembly=Core"
        xmlns:vm="clr-namespace:Laboratornaya3.ViewModels"
        xmlns:converters="clr-namespace:Laboratornaya3.Converters"
        xmlns:enums="clr-namespace:Core.Enums;assembly=Core"
        Title="Cities: Skylines 3"
        Height="600"
        Width="1000"
        WindowState="Maximized"
        WindowStyle="SingleBorderWindow">

    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
        <converters:NullToCollapsedVisibilityConverter x:Key="NullToCollapsedVisibilityConverter"/>

        <Style x:Key="BaseCategoryStyle" TargetType="Button">
            <Setter Property="Background" Value="#CCCCCC" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="15, 5" />
            <Setter Property="Foreground" Value="Black" />
        </Style>

        <Style x:Key="ProductionButtonStyle" TargetType="Button" BasedOn="{StaticResource BaseCategoryStyle}">
            <Style.Triggers>
                <DataTrigger Binding="{Binding SelectedCategoryName}" Value="Производство">
                    <Setter Property="Background" Value="White" />
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="CommerceButtonStyle" TargetType="Button" BasedOn="{StaticResource BaseCategoryStyle}">
            <Style.Triggers>
                <DataTrigger Binding="{Binding SelectedCategoryName}" Value="Коммерция">
                    <Setter Property="Background" Value="White" />
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SociumButtonStyle" TargetType="Button" BasedOn="{StaticResource BaseCategoryStyle}">
            <Style.Triggers>
                <DataTrigger Binding="{Binding SelectedCategoryName}" Value="Социум">
                    <Setter Property="Background" Value="White" />
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="TransportButtonStyle" TargetType="Button" BasedOn="{StaticResource BaseCategoryStyle}">
            <Style.Triggers>
                <DataTrigger Binding="{Binding SelectedCategoryName}" Value="Транспорт">
                    <Setter Property="Background" Value="White" />
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="RoadButtonStyle" TargetType="Button" BasedOn="{StaticResource BaseCategoryStyle}">
            <Style.Triggers>
                <DataTrigger Binding="{Binding SelectedCategoryName}" Value="Дороги">
                    <Setter Property="Background" Value="White" />
                </DataTrigger>
            </Style.Triggers>
        </Style>

    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Верхняя панель -->
        <Grid Grid.Row="0" Background="#F0F0F0" Height="50">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="10,0" VerticalAlignment="Center">
                <Button Content="❌"
                        Command="{Binding CancelBuildingCommand}"
                        ToolTip="Отменить размещение"
                        Background="Transparent"
                        BorderThickness="0"
                        FontSize="16"
                        Margin="0,0,10,0"
                        Visibility="{Binding IsBuildingMode, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                <Button Content="💾"
                        Command="{Binding SaveGameCommand}"
                        ToolTip="Сохранить игру"
                        Background="#87CEEB"
                        Margin="0,0,5,0"
                        Padding="3,2" />

                <Button Content="📂"
                        Command="{Binding LoadGameCommand}"
                        ToolTip="Загрузить игру"
                        Background="#98FB98"
                        Margin="0,0,5,0"
                        Padding="3,2" />

                <Button Content="🛍️ Купить"
                        Command="{Binding BuyMaterialsCommand}"
                        ToolTip="Открыть диалог покупки материалов"
                        Background="#90EE90"
                        Margin="0,0,10,0"
                        Padding="5,2" />

                <Button Content="💰 Продать"
                        Command="{Binding SellMaterialsCommand}"
                        ToolTip="Продать материалы"
                        Background="#FFD700"
                        Margin="0,0,5,0"
                        Padding="3,2" />

                <Button Content="🗑️ Очистить" 
                        Click="ClearBuildings_Click"
                        ToolTip="Удалить все здания"
                        Background="LightCoral"
                        Margin="0,0,10,0"
                        Padding="5,2"/>

                <Button Content="📦 Ресурсы" 
                        Command="{Binding ShowResourcesInfoCommand}"
                        ToolTip="Показать инвентарь материалов"
                        Background="LightCyan"
                        Margin="0,0,10,0"
                        Padding="5,2"/>

                <TextBlock Text="👤" FontSize="20" Margin="0,0,3,0" VerticalAlignment="Center" FontWeight="Bold" />
                <TextBlock Text="{Binding CitizenCount}" FontSize="20" VerticalAlignment="Center" FontWeight="Bold" />
            </StackPanel>

            <Border Grid.Column="1" CornerRadius="20" Background="Yellow" Width="60" Height="40" Margin="0,-5,0,0">
                <TextBlock Text="12:34" Foreground="Black" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center" />
            </Border>

            <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="10,0">
                <StackPanel Orientation="Horizontal" Margin="0,0,10,0">
                    <TextBlock Text="⚡" FontSize="20" Margin="0,0,3,0" VerticalAlignment="Center" />
                    <TextBlock Text="0" FontSize="20" VerticalAlignment="Center" />
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,0,10,0">
                    <TextBlock Text="🌊" FontSize="20" Margin="0,0,3,0" VerticalAlignment="Center" />
                    <TextBlock Text="0" FontSize="20" VerticalAlignment="Center" />
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,0,10,0">
                    <TextBlock Text="⛽" FontSize="20" Margin="0,0,3,0" VerticalAlignment="Center" />
                    <TextBlock Text="0" FontSize="20" VerticalAlignment="Center" />
                </StackPanel>

                <StackPanel Orientation="Horizontal" Cursor="Hand" MouseDown="BudgetPanel_MouseDown" ToolTip="Кликните для подробностей">
                    <TextBlock Text="💵" Margin="0,0,3,0" FontSize="20" VerticalAlignment="Center" />
                    <TextBlock Text="{Binding CityBudget, StringFormat='{}{0:N0}$'}" FontSize="20" VerticalAlignment="Center" FontWeight="Bold" />
                </StackPanel>
            </StackPanel>
        </Grid>

        <!-- Область карты -->
        <ScrollViewer Grid.Row="1"
              x:Name="MapScrollViewer"
              HorizontalScrollBarVisibility="Auto"
              VerticalScrollBarVisibility="Auto"
              PreviewMouseWheel="MapScrollViewer_PreviewMouseWheel"
              MouseDown="MapScrollViewer_MouseDown"
              MouseMove="MapScrollViewer_MouseMove"
              MouseUp="MapScrollViewer_MouseUp"
              Background="#ADD8E6">

            <ContentControl x:Name="MapContainer">
                <Grid x:Name="MapGrid"
              RenderTransformOrigin="0,0"
              VerticalAlignment="Center"
              HorizontalAlignment="Center">
                    <Grid.RenderTransform>
                        <TransformGroup>
                            <TranslateTransform x:Name="TranslateTransform" />
                            <ScaleTransform x:Name="ScaleTransform" />
                        </TransformGroup>
                    </Grid.RenderTransform>

                    <!-- список тайлов -->
                    <ItemsControl x:Name="TilesItemsControl"
                          ItemsSource="{Binding TilesFlat}"
                          BorderThickness="0"
                          Background="Transparent">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <UniformGrid Columns="{Binding CurrentMap.Width}"
                                     Rows="{Binding CurrentMap.Height}" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>

                        <ItemsControl.ItemTemplate>
                            <DataTemplate DataType="{x:Type map:Tile}">
                                <Border Width="50"
                                Height="50"
                                BorderBrush="#333"
                                BorderThickness="1"
                                MouseLeftButtonDown="Tile_LeftClick"
                                MouseRightButtonDown="Tile_RightClick">

                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="Background" Value="PaleGreen" />
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Terrain}" Value="Water">
                                                    <Setter Property="Background" Value="LightBlue" />
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Terrain}" Value="Mountain">
                                                    <Setter Property="Background" Value="Gray" />
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Terrain}" Value="Forest">
                                                    <Setter Property="Background" Value="DarkGreen" />
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Terrain}" Value="Meadow">
                                                    <Setter Property="Background" Value="LightGreen" />
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Terrain}" Value="Plain">
                                                    <Setter Property="Background" Value="PaleGreen" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>

                                    <Grid>
                                        <Rectangle Fill="Transparent" />

                                        <!-- Визуализация дороги -->
                                        <Rectangle Fill="DarkGray" Margin="15">
                                            <Rectangle.Style>
                                                <Style TargetType="Rectangle">
                                                    <Setter Property="Visibility" Value="Collapsed" />
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding HasRoad}" Value="True">
                                                            <Setter Property="Visibility" Value="Visible" />
                                                        </DataTrigger>
                                                        <!-- Ширина дороги через отступы: меньше Margin => шире визуально -->
                                                        <DataTrigger Binding="{Binding RoadType}" Value="{x:Static enums:RoadType.Avenue}">
                                                            <Setter Property="Margin" Value="8" />
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding RoadType}" Value="{x:Static enums:RoadType.Highway}">
                                                            <Setter Property="Margin" Value="4" />
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding RoadType}" Value="{x:Static enums:RoadType.Dirt}">
                                                            <Setter Property="Margin" Value="18" />
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Rectangle.Style>
                                        </Rectangle>

                                        <!-- Транспорт (несколько иконок) -->
                                        <ItemsControl ItemsSource="{Binding VehicleIcons}"
                                                      HorizontalAlignment="Center"
                                                      VerticalAlignment="Center">
                                            <ItemsControl.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <StackPanel Orientation="Horizontal" />
                                                </ItemsPanelTemplate>
                                            </ItemsControl.ItemsPanel>
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding .}" FontSize="14" Margin="1,0" />
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                            <ItemsControl.Style>
                                                <Style TargetType="ItemsControl">
                                                    <Setter Property="Visibility" Value="Collapsed" />
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding HasVehicle}" Value="True">
                                                            <Setter Property="Visibility" Value="Visible" />
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </ItemsControl.Style>
                                        </ItemsControl>

                                        <!-- Перекрёсток -->
                                        <TextBlock Text="🚦"
                                                   FontSize="14"
                                                   HorizontalAlignment="Right"
                                                   VerticalAlignment="Top"
                                                   Margin="2">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Visibility" Value="Collapsed" />
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding HasIntersection}" Value="True">
                                                            <Setter Property="Visibility" Value="Visible" />
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>

                                        <!-- Основное здание (красный блок) -->
                                        <Border Background="Red"
                                                Margin="2"
                                                CornerRadius="3"
                                                Visibility="{Binding Building, Converter={StaticResource NullToVisibilityConverter}}">
                                            <TextBlock Text="{Binding Building.Name}"
                                                       FontSize="8"
                                                       Foreground="White"
                                                       FontWeight="Bold"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"
                                                       TextWrapping="Wrap"
                                                       TextAlignment="Center" />
                                        </Border>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Grid>
            </ContentControl>
        </ScrollViewer>

        <!-- Легенда -->
        <Canvas Grid.Row="1">
            <Button Content="Легенда"
                    x:Name="LegendButton"
                    Canvas.Left="10"
                    Canvas.Top="10"
                    Padding="10,5"
                    Click="LegendButton_Click" />

            <Border x:Name="LegendPanel"
                    Canvas.Left="10"
                    Canvas.Top="50"
                    Width="200"
                    Height="300"
                    Background="White"
                    BorderBrush="Gray"
                    BorderThickness="1"
                    CornerRadius="5"
                    Padding="10"
                    Visibility="Collapsed">
                <StackPanel>
                    <TextBlock Text="Обозначения Карты" FontWeight="Bold" Margin="0,0,0,10" />
                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <Border Width="15" Height="15" Background="LightBlue" BorderBrush="#333" BorderThickness="1" Margin="0,0,5,0" />
                        <TextBlock Text="Вода (Water)" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <Border Width="15" Height="15" Background="Gray" BorderBrush="#333" BorderThickness="1" Margin="0,0,5,0" />
                        <TextBlock Text="Горы (Mountain)" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <Border Width="15" Height="15" Background="DarkGreen" BorderBrush="#333" BorderThickness="1" Margin="0,0,5,0" />
                        <TextBlock Text="Лес (Forest)" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <Border Width="15" Height="15" Background="LightGreen" BorderBrush="#333" BorderThickness="1" Margin="0,0,5,0" />
                        <TextBlock Text="Луг (Meadow)" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <Border Width="15" Height="15" Background="PaleGreen" BorderBrush="#333" BorderThickness="1" Margin="0,0,5,0" />
                        <TextBlock Text="Равнина (Plain)" />
                    </StackPanel>

                    <Separator Margin="0,8,0,8" />
                    <TextBlock Text="Обозначения Зданий" FontWeight="Bold" Margin="0,0,0,5" />
                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <Border Width="15" Height="15" Background="Red" BorderBrush="#333" BorderThickness="1" Margin="0,0,5,0" />
                        <TextBlock Text="Здание" />
                    </StackPanel>
                </StackPanel>
            </Border>
        </Canvas>

        <!-- Нижняя панель -->
        <Grid Grid.Row="2" Background="#DEDEDE">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Orientation="Horizontal" Background="#CCCCCC" x:Name="CategoryPanel">
                <Button Content="Производство"
                        Command="{Binding SelectCategoryCommand}"
                        CommandParameter="Производство"
                        Style="{StaticResource ProductionButtonStyle}" />

                <Button Content="Коммерция"
                        Command="{Binding SelectCategoryCommand}"
                        CommandParameter="Коммерция"
                        Style="{StaticResource CommerceButtonStyle}" />

                <Button Content="Социум"
                        Command="{Binding SelectCategoryCommand}"
                        CommandParameter="Социум"
                        Style="{StaticResource SociumButtonStyle}" />

                <Button Content="Транспорт"
                        Command="{Binding SelectCategoryCommand}"
                        CommandParameter="Транспорт"
                        Style="{StaticResource TransportButtonStyle}" />

                <Button Content="Дороги"
                        Command="{Binding SelectCategoryCommand}"
                        CommandParameter="Дороги"
                        Style="{StaticResource RoadButtonStyle}" />
            </StackPanel>

            <ItemsControl Grid.Row="1" x:Name="BuildingsItemsControl" ItemsSource="{Binding VisibleBuildings}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal" Margin="5,10" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="Gray" BorderThickness="1" Width="80" Height="80" Margin="5,0" Background="White" CornerRadius="5" Cursor="Hand">
                            <Border.InputBindings>
                                <MouseBinding MouseAction="LeftClick" 
                                              Command="{Binding DataContext.SelectBuildingCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                              CommandParameter="{Binding}" />
                            </Border.InputBindings>

                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                <TextBlock Text="{Binding Icon}" FontSize="24" HorizontalAlignment="Center" />
                                <TextBlock Text="{Binding Name}" HorizontalAlignment="Center" FontSize="10" />
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Grid>
    </Grid>
</Window>